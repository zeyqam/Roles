@model CourseCreateVM
@{
    ViewData["Title"] = "Create";
}


<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputUsername1">Name</label>
            <input asp-for="Name" class="form-control" id="exampleInputUsername1">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Description</label>
            <input asp-for="Description" class="form-control" id="exampleInputUsername1">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Price</label>
            <input asp-for="Price" type="number" class="form-control" step="any" min="0" id="exampleInputUsername1">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control">
            </select>

        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Images</label>
            <input class="form-control" asp-for="Images" id="exampleInputUsername1">
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Lesson Count</label>
            <input asp-for="LessonCount" type="number" class="form-control" step="any" min="0" id="exampleInputUsername1">
            <span asp-validation-for="LessonCount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Instructor name</label>
            <input asp-for="InstructorName"  class="form-control" step="any" min="0" id="exampleInputUsername1">
            <span asp-validation-for="InstructorName" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>

</div>


