@model RegisterVM
@{
    Layout = null;
    ViewData["Title"] = "SignUp";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<section id="register">
    <div class="container mt-5">
        <h1 class="text-center">Sign up</h1>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="register-form" style="width:50%;margin:0 auto;background-color:chartreuse;padding:30px;margin-bottom100px;border-radius:30px; box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;">
            <form method="post" asp-action="SignUp" >
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input asp-for="Email"autocomplete="off" type="text" class="form-control" >
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input asp-for="UserName"autocomplete="off" class="form-control">
                    <span class="text-danger" asp-validation-for="UserName"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">FullName</label>
                    <input asp-for="FullName"autocomplete="off" class="form-control">
                    <span class="text-danger" asp-validation-for="FullName"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Password</label>
                    <input asp-for="Password"  class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">ConfirmPassword</label>
                    <input asp-for="ConfirmPassword" autocomplete="off" class="form-control">
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                </div>
                
                <div class="register-btn d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-success">Sign up</button>
                    
                </div>
                <a asp-action="SignIn">Go to Sign in</a>
            </form>
        </div>
        
    </div>
</section>




