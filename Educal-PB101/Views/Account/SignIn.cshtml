@model LoginVM
@{
    Layout = null;
    ViewData["Title"] = "SignIn";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<section id="Login">
    <div class="container mt-5">
        <h1 class="text-center">Sign In</h1>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="register-form" style="width:50%;margin:0 auto;background-color:chartreuse;padding:30px;margin-bottom100px;border-radius:30px; box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;">
            <form method="post" asp-action="SignIn">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email or username</label>
                    <input asp-for="EmailorUsername" autocomplete="off" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="EmailorUsername"></span>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Password</label>
                    <input asp-for="Password" autocomplete="off" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>
                
                

                <div class="register-btn d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-success">Sign in</button>
          
                </div>
                <a asp-action="SignUp">Go to Sign Up</a>
            </form>
        </div>

    </div>
</section>


